---
/**
 * AMORPH v7 - Base Layout
 * 
 * Modulares Layout - kein Monolith mehr!
 * Unterst√ºtzt Multi-Site mit SITE_TYPE
 */

import { getSiteType, SITE_META } from '../server/config';

export interface Props {
  title?: string;
  description?: string;
}

// Get site type for styling
const siteType = getSiteType();
const siteMeta = SITE_META[siteType];

const { 
  title = siteMeta.name, 
  description = 'Biologische Daten visualisieren, vergleichen, verstehen.' 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="de" data-site={siteType}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>
  
  <!-- Styles -->
  <link rel="stylesheet" href="/styles/base.css?v=7">
  <link rel="stylesheet" href="/styles/components.css?v=7">
  <link rel="stylesheet" href="/styles/morphs.css?v=7">
  <link rel="stylesheet" href="/styles/morphs/bifroest.css?v=7">
</head>
<body>
  <slot />
  
  <!-- Client Scripts -->
  <script>
    import { initApp } from '../client/features';
    initApp();
  </script>
</body>
</html>
