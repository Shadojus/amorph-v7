---
/**
 * AMORPH v7 - Base Layout
 * 
 * PERFORMANCE OPTIMIERT:
 * - CSS preloading
 * - Deferred script loading
 * - Resource hints
 */

import { getSiteType, SITE_META } from '../server/config';

export interface Props {
  title?: string;
  description?: string;
}

// Get site type for styling
const siteType = getSiteType();
const siteMeta = SITE_META[siteType];

const { 
  title = siteMeta.name, 
  description = 'Biologische Daten visualisieren, vergleichen, verstehen.' 
} = Astro.props;

// Production mode check
const isProd = import.meta.env.PROD;
---

<!DOCTYPE html>
<html lang="de" data-site={siteType}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>
  
  <!-- PERFORMANCE: DNS Prefetch für externe Ressourcen -->
  <link rel="dns-prefetch" href="//fonts.googleapis.com">
  
  {isProd ? (
    <>
      {/* Production: ALL-IN-ONE CSS Bundle (1 Request statt 60+) */}
      <link rel="preload" href="/styles/all.min.css" as="style" />
      <link rel="stylesheet" href="/styles/all.min.css" />
    </>
  ) : (
    <>
      {/* Development: Einzeldateien für besseres Debugging */}
      <link rel="stylesheet" href="/styles/base.css" />
      <link rel="stylesheet" href="/styles/components.css" />
      <link rel="stylesheet" href="/styles/morphs.bundled.css" />
    </>
  )}
</head>
<body>
  <slot />
  
  <!-- Client Scripts - PERFORMANCE: Defer loading -->
  <script>
    import { initApp } from '../client/features';
    // Warte bis DOM ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initApp);
    } else {
      initApp();
    }
  </script>
</body>
</html>
