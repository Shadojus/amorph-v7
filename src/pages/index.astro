  <script>
    // Domain Weights speichern
    const domainWeights: Record<string, number> = {};
    
    // Alle Domain-Slider
    const sliders = document.querySelectorAll<HTMLInputElement>('.fog-slider');
    const fogBlobs = document.querySelectorAll<HTMLElement>('.fog-blob');
    const domainBar = document.getElementById('activeDomainBar');
    
    // Initialisiere Weights
    sliders.forEach(slider => {
      const domain = slider.dataset.domain || '';
      domainWeights[domain] = parseInt(slider.value);
    });
    
    // Slider Event Handler
    sliders.forEach(slider => {
      slider.addEventListener('input', () => {
        const domain = slider.dataset.domain || '';
        const value = parseInt(slider.value);
        domainWeights[domain] = value;
        
        // Update Nebel-Opacity
        fogBlobs.forEach(blob => {
          if (blob.dataset.domain === domain) {
            const opacity = 0.1 + (value / 100) * 0.5;
            blob.style.opacity = String(opacity);
            
            // Scale basierend auf Wert
            const scale = 0.5 + (value / 100) * 1;
            blob.style.transform = `scale(${scale})`;
          }
        });
        
        // Update Domain Bar
        updateDomainBar();
        
        // Update Domain Pill Highlighting
        updateDomainPills();
      });
    });
    
    function updateDomainBar() {
      if (!domainBar) return;
      
      // Sortiere Domains nach Gewicht
      const sortedDomains = Object.entries(domainWeights)
        .filter(([_, v]) => v > 0)
        .sort((a, b) => b[1] - a[1]);
      
      const total = sortedDomains.reduce((sum, [_, v]) => sum + v, 0);
      
      domainBar.innerHTML = sortedDomains.map(([domain, weight]) => {
        const pill = document.querySelector(`.domain-pill[data-domain="${domain}"]`);
        const color = pill ? getComputedStyle(pill).getPropertyValue('--pill-color') : '#6B8AFF';
        const flex = (weight / total) * 100;
        return `<div class="active-domains-segment" style="flex: ${flex}; background: ${color};"></div>`;
      }).join('');
    }
    
    function updateDomainPills() {
      document.querySelectorAll('.domain-pill').forEach(pill => {
        const domain = (pill as HTMLElement).dataset.domain || '';
        const weight = domainWeights[domain] || 50;
        
        if (weight > 70) {
          pill.classList.add('active');
        } else {
          pill.classList.remove('active');
        }
      });
    }
    
    // Search Form - fÃ¼ge Domain-Weights als Parameter hinzu
    const searchForm = document.querySelector('.search-container');
    searchForm?.addEventListener('submit', (e) => {
      e.preventDefault();
      const form = e.target as HTMLFormElement;
      const query = (form.querySelector('.search-box') as HTMLInputElement).value;
      
      // Finde Top-Domains (Gewicht > 60)
      const topDomains = Object.entries(domainWeights)
        .filter(([_, v]) => v > 60)
        .sort((a, b) => b[1] - a[1])
        .slice(0, 3)
        .map(([d]) => d);
      
      if (topDomains.length === 1) {
        // Nur eine Domain aktiv -> gehe direkt zur Domain-Seite
        window.location.href = `/${topDomains[0]}?q=${encodeURIComponent(query)}`;
      } else if (topDomains.length > 1) {
        // Mehrere Domains -> Cross-Domain Suche
        window.location.href = `/search?q=${encodeURIComponent(query)}&domains=${topDomains.join(',')}`;
      } else {
        // Keine spezifische Domain -> Standardsuche
        window.location.href = `/fungi?q=${encodeURIComponent(query)}`;
      }
    });
    
    // Show controls on hover near corners
    document.querySelectorAll('.fog-controls').forEach(ctrl => {
      ctrl.addEventListener('mouseenter', () => ctrl.classList.add('active'));
      ctrl.addEventListener('mouseleave', () => ctrl.classList.remove('active'));
    });
    
    // Initial update
    updateDomainBar();
  </script>
