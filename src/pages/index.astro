  <script>
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    // SUPER-DOMAIN BLOOM CONTROLS
    // Ziehe vertikal um die IntensitÃ¤t zu Ã¤ndern - Kreise expandieren/schrumpfen
    // Bei 100% Ã¼berlappen sie sich in der Mitte (Blume des Lebens)
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    
    // Domain Mapping
    const superDomainMap: Record<string, string[]> = {
      life: ['fungi', 'phyto', 'drako', 'bakterio', 'viro'],
      science: ['geno', 'anato', 'chemo', 'physi', 'kosmo'],
      earth: ['mine', 'tekto', 'paleo'],
      systems: ['netzo', 'cognito', 'biotech', 'socio'],
    };
    
    // State
    const superDomainWeights: Record<string, number> = {
      life: 50,
      science: 50,
      earth: 50,
      systems: 50,
    };
    
    // Bloom size settings
    const MIN_SIZE = 60;   // Minimale GrÃ¶ÃŸe bei 0%
    const MAX_SIZE = 450;  // Maximale GrÃ¶ÃŸe bei 100% (Ã¼berlappen sich dann)
    
    // Legacy domain weights (computed from super-domains)
    const domainWeights: Record<string, number> = {};
    
    // Elements
    const bloomControls = document.querySelectorAll<HTMLElement>('.bloom-control');
    const domainBar = document.getElementById('activeDomainBar');
    
    // Initialize domain weights from super-domains
    function updateDomainWeightsFromSuper() {
      for (const [superDomain, domains] of Object.entries(superDomainMap)) {
        const weight = superDomainWeights[superDomain];
        for (const domain of domains) {
          domainWeights[domain] = weight;
        }
      }
    }
    updateDomainWeightsFromSuper();
    
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    // BLOOM DRAG INTERACTION - Vertikales Ziehen
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    
    bloomControls.forEach(bloom => {
      let isDragging = false;
      let startY = 0;
      let startValue = 50;
      
      const superDomain = bloom.dataset.superdomain || '';
      const circle = bloom.querySelector<HTMLElement>('.bloom-circle');
      const glow = bloom.querySelector<HTMLElement>('.bloom-glow');
      const valueEl = bloom.querySelector<HTMLElement>('.bloom-value');
      const isTop = bloom.classList.contains('top-left') || bloom.classList.contains('top-right');
      
      // Pointer down
      bloom.addEventListener('pointerdown', (e) => {
        isDragging = true;
        startY = e.clientY;
        startValue = superDomainWeights[superDomain];
        bloom.classList.add('dragging');
        bloom.setPointerCapture(e.pointerId);
        e.preventDefault();
      });
      
      // Pointer move
      bloom.addEventListener('pointermove', (e) => {
        if (!isDragging) return;
        
        // Berechne neuen Wert basierend auf Y-Bewegung
        // FÃ¼r Top-Controls: Nach unten ziehen = mehr, nach oben = weniger
        // FÃ¼r Bottom-Controls: Nach oben ziehen = mehr, nach unten = weniger
        const deltaY = e.clientY - startY;
        const sensitivity = 0.5; // Pixel pro Prozent
        const direction = isTop ? 1 : -1;
        
        let newValue = startValue + (deltaY * sensitivity * direction);
        newValue = Math.max(0, Math.min(100, newValue));
        
        // Update state
        superDomainWeights[superDomain] = Math.round(newValue);
        updateDomainWeightsFromSuper();
        
        // Update UI
        updateBloomVisuals(bloom, newValue);
        updateDomainBar();
        updateDomainPills();
      });
      
      // Pointer up
      bloom.addEventListener('pointerup', () => {
        isDragging = false;
        bloom.classList.remove('dragging');
      });
      
      bloom.addEventListener('pointerleave', () => {
        if (isDragging) {
          isDragging = false;
          bloom.classList.remove('dragging');
        }
      });
      
      // Double-click to reset
      bloom.addEventListener('dblclick', () => {
        superDomainWeights[superDomain] = 50;
        updateDomainWeightsFromSuper();
        updateBloomVisuals(bloom, 50);
        updateDomainBar();
        updateDomainPills();
      });
    });
    
    function updateBloomVisuals(bloom: HTMLElement, value: number) {
      const circle = bloom.querySelector<HTMLElement>('.bloom-circle');
      const glow = bloom.querySelector<HTMLElement>('.bloom-glow');
      const valueEl = bloom.querySelector<HTMLElement>('.bloom-value');
      
      // Berechne GrÃ¶ÃŸe basierend auf Wert
      const size = MIN_SIZE + (value / 100) * (MAX_SIZE - MIN_SIZE);
      const opacity = 0.3 + (value / 100) * 0.7;
      const glowSize = size * 1.5;
      
      if (circle) {
        circle.style.width = `${size}px`;
        circle.style.height = `${size}px`;
        circle.style.opacity = String(opacity);
      }
      
      if (glow) {
        glow.style.width = `${glowSize}px`;
        glow.style.height = `${glowSize}px`;
        glow.style.opacity = String(0.1 + (value / 100) * 0.3);
      }
      
      if (valueEl) {
        valueEl.textContent = `${Math.round(value)}%`;
      }
    }
    
    function updateDomainBar() {
      if (!domainBar) return;
      
      // Zeige Super-Domains sortiert nach Gewicht
      const sortedSuper = Object.entries(superDomainWeights)
        .filter(([_, v]) => v > 0)
        .sort((a, b) => b[1] - a[1]);
      
      const total = sortedSuper.reduce((sum, [_, v]) => sum + v, 0);
      
      const colorMap: Record<string, string> = {
        life: '#4AE3A7',
        science: '#A78BFA',
        earth: '#F59E0B',
        systems: '#38BDF8',
      };
      
      domainBar.innerHTML = sortedSuper.map(([sd, weight]) => {
        const color = colorMap[sd] || '#6B8AFF';
        const flex = (weight / total) * 100;
        return `<div class="active-domains-segment" style="flex: ${flex}; background: ${color};"></div>`;
      }).join('');
    }
    
    function updateDomainPills() {
      document.querySelectorAll('.domain-pill').forEach(pill => {
        const domain = (pill as HTMLElement).dataset.domain || '';
        const weight = domainWeights[domain] || 50;
        
        // Set intensity level for graduated glow
        let intensity = 'none';
        if (weight > 80) intensity = 'max';
        else if (weight > 60) intensity = 'high';
        else if (weight > 40) intensity = 'medium';
        else if (weight > 20) intensity = 'low';
        
        (pill as HTMLElement).dataset.intensity = intensity;
        
        if (weight > 70) {
          pill.classList.add('active');
        } else {
          pill.classList.remove('active');
        }
      });
    }
    
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    // SEARCH WITH SUPER-DOMAIN WEIGHTS
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    
    // Search Form - verwende Super-Domain Gewichtung
    const searchForm = document.querySelector('.search-container');
    searchForm?.addEventListener('submit', (e) => {
      e.preventDefault();
      const form = e.target as HTMLFormElement;
      const query = (form.querySelector('.search-box') as HTMLInputElement).value;
      
      // Finde Top-Super-Domain (Gewicht > 60)
      const topSuper = Object.entries(superDomainWeights)
        .filter(([_, v]) => v > 60)
        .sort((a, b) => b[1] - a[1]);
      
      if (topSuper.length >= 1) {
        // HÃ¶chste Super-Domain â†’ erste Domain dieser Gruppe
        const primarySuper = topSuper[0][0];
        const primaryDomain = superDomainMap[primarySuper][0];
        
        // Alle aktiven Domains dieser Super-Domains
        const activeDomains = topSuper.flatMap(([sd]) => superDomainMap[sd]);
        
        if (topSuper.length === 1 && topSuper[0][1] > 80) {
          // Eine Super-Domain sehr dominant â†’ direkt zur primÃ¤ren Domain
          window.location.href = `/${primaryDomain}?q=${encodeURIComponent(query)}`;
        } else {
          // Mehrere aktiv â†’ Cross-Domain Suche
          window.location.href = `/search?q=${encodeURIComponent(query)}&domains=${activeDomains.slice(0, 5).join(',')}`;
        }
      } else {
        // Keine spezifische Gewichtung â†’ Standardsuche
        window.location.href = `/fungi?q=${encodeURIComponent(query)}`;
      }
    });
    
    // Initialize visuals
    bloomControls.forEach(bloom => {
      const superDomain = bloom.dataset.superdomain || '';
      const value = superDomainWeights[superDomain];
      updateBloomVisuals(bloom, value);
    });
    updateDomainBar();
    updateDomainPills();
  </script>
