        // Lade komplette Spezies-Daten via API
        const response = await fetch(`/api/search?q=${encodeURIComponent(slug)}&limit=1`);
        const data = await response.json();
        
        if (data.items && data.items.length > 0) {
          const speciesData = data.items[0];
          
          // Get perspective mapping
          let fieldPerspectives: Record<string, string> = {};
          try {
            fieldPerspectives = JSON.parse(item.dataset.fieldPerspectives || '{}');
          } catch (e) {}
          
          // Alle Felder der Spezies hinzufÃ¼gen (auÃŸer interne)
          Object.entries(speciesData).forEach(([fieldName, value]) => {
            // Skip interne Felder und Basis-Felder
            if (fieldName.startsWith('_') || 
                ['id', 'slug', 'name', 'bild', 'wissenschaftlich', 'image', 'scientific_name'].includes(fieldName)) {
              return;
            }
            
            const perspective = fieldPerspectives[fieldName];
            selectField(slug, name, fieldName, value, perspective);
          });
          
          console.log(`[Species] Selected ${name} with all fields`);
        }
      } catch (e) {
        console.error('[Species] Failed to load species data:', e);
        // Fallback: Nur sichtbare Felder
        const fields = item.querySelectorAll('.amorph-field');
        fields.forEach((field, index) => {
          const fieldEl = field as HTMLElement;
          const fieldName = fieldEl.dataset.field || `field_${index}`;
          const valueEl = fieldEl.querySelector('.amorph-field-value');
          const value = valueEl?.textContent?.trim() || '';
          
          let perspective: string | undefined;
          try {
            const fieldPerspectives = JSON.parse(item.dataset.fieldPerspectives || '{}');
            perspective = fieldPerspectives[fieldName];
          } catch (e) {}
          
          selectField(slug, name, fieldName, value, perspective);
        });
      }
    }
    
    function deselectSpeciesFields(slug: string) {
      // Alle Felder dieser Spezies abwÃ¤hlen
      const currentFields = getSelectedFields();
      currentFields.forEach(field => {
        if (field.itemSlug === slug) {
          deselectField(slug, field.fieldName);
        }
      });
    }
    
    speciesSelectBtns.forEach(btn => {
      btn.addEventListener('click', async (e) => {
        e.preventDefault();
        e.stopPropagation();
        
        const item = btn.closest('.amorph-item') as HTMLElement;
        if (!item) return;
        
        const slug = item.dataset.slug || '';
        const name = item.dataset.name || '';
        
        // Show loading state
        btn.classList.add('is-loading');
        
        if (selectedSpecies.has(slug)) {
          // Deselect
          selectedSpecies.delete(slug);
          item.classList.remove('species-selected');
          deselectSpeciesFields(slug);
        } else {
          // Select - lÃ¤dt alle Daten async
          selectedSpecies.add(slug);
          item.classList.add('species-selected');
          await selectSpeciesFields(item, slug, name);
        }
        
        btn.classList.remove('is-loading');
        saveSelectedSpecies();
        
        // Update badge
        const badge = document.querySelector('.bottom-nav-badge');
        if (badge) {
          const count = selectedSpecies.size;
          badge.textContent = String(count);
          badge.classList.toggle('has-items', count > 0);
        }
      });
    });
    
    // Initial badge update
    const badge = document.querySelector('.bottom-nav-badge');
    if (badge && selectedSpecies.size > 0) {
      badge.textContent = String(selectedSpecies.size);
      badge.classList.add('has-items');
    }
    
    // Compact view: tap on card SELECTS species (not navigates)
    // Only the arrow button navigates to detail page
    if (grid) {
      grid.addEventListener('click', async (e) => {
        // Only in compact view
        if (!grid.classList.contains('view-compact')) return;
        
        const target = e.target as HTMLElement;
        
        // Arrow button navigates to detail
        if (target.closest('.item-detail-link')) {
          return; // Let the link handle navigation
        }
        
        // Ignore copyright clicks
        if (target.closest('.bifroest-copyright')) {
          return;
        }
        
        // Click anywhere on card = select/deselect species
        const item = target.closest('.amorph-item') as HTMLElement;
        if (item) {
          e.preventDefault();
          const slug = item.dataset.slug || '';
          const name = item.dataset.name || '';
          
          // Visual feedback
          item.style.transform = 'scale(0.96)';
          setTimeout(() => item.style.transform = '', 150);
          
          if (selectedSpecies.has(slug)) {
            // Deselect
            selectedSpecies.delete(slug);
            item.classList.remove('species-selected');
            deselectSpeciesFields(slug);
          } else {
            // Select - load all data async
            selectedSpecies.add(slug);
            item.classList.add('species-selected');
            await selectSpeciesFields(item, slug, name);
          }
          
          saveSelectedSpecies();
          
          // Update badge
          const badge = document.querySelector('.bottom-nav-badge');
          if (badge) {
            const count = selectedSpecies.size;
            badge.textContent = String(count);
            badge.classList.toggle('has-items', count > 0);
          }
        }
      });
    }
