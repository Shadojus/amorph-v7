    const typeA = detectType(a[1], keyA);
    const typeB = detectType(b[1], keyB);
    const prioA = MORPH_PRIORITY[typeA] ?? 10;
    const prioB = MORPH_PRIORITY[typeB] ?? 10;
    return prioA - prioB;
  });
  
