# AMORPH Environment Configuration
# Copy to .env and adjust values

# ===========================================
# DATABASE CONNECTION (PostgreSQL / SQLite)
# ===========================================

# PostgreSQL (Production/Docker)
# DATABASE_URL=postgresql://bifroest:bifroest2024@localhost:5432/bifroest

# SQLite (Local Development - No Docker needed)
DATABASE_URL=file:../shared/database/prisma/dev.db

# Data source strategy
# - local: Use local JSON files from data-local/ (default for development)
# - postgresql: Use PostgreSQL database via Prisma (production)
DATA_SOURCE=local

# ===========================================
# CACHING
# ===========================================

# Enable response caching (true/false)
ENABLE_CACHE=true

# Cache TTL in seconds (default: 300 = 5 minutes)
CACHE_TTL=300

# ===========================================

# Server port (default: 4321)
PORT=4321

# Host binding (0.0.0.0 for Docker, localhost for dev)
HOST=localhost

# Node environment
NODE_ENV=development

# ===========================================
# FEATURES
# ===========================================

# Enable debug logging
DEBUG=false

# Enable observer analytics
ENABLE_OBSERVER=false
