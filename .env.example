# AMORPH Environment Configuration
# Copy to .env and adjust values

# ===========================================
# POCKETBASE CONNECTION
# ===========================================

# Pocketbase API URL
# Development: http://localhost:8090
# Docker: http://pocketbase:8090
# Production: https://api.bifroest.io
POCKETBASE_URL=http://localhost:8090

# Data source strategy
# - pocketbase: Only use Pocketbase API (recommended)
# - local: Only use local JSON files (legacy/offline)
# - auto: Try Pocketbase first, fallback to local
DATA_SOURCE=pocketbase

# ===========================================
# CACHING
# ===========================================

# Enable response caching (true/false)
ENABLE_CACHE=true

# Cache TTL in seconds (default: 300 = 5 minutes)
CACHE_TTL=300

# ===========================================
# SERVER
# ===========================================

# Server port (default: 4321)
PORT=4321

# Host binding (0.0.0.0 for Docker, localhost for dev)
HOST=localhost

# Node environment
NODE_ENV=development

# ===========================================
# FEATURES
# ===========================================

# Enable debug logging
DEBUG=false

# Enable observer analytics
ENABLE_OBSERVER=false
